@model LuxuryGo.Models.ApplicationUser

@{

    ViewBag.Title = Html.Raw("Tài khoản | LuxuryGo.VN");
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}



@section HeaderMetas{
    <meta name="description" content="Bài viết mới, xu hướng thời trang 2016, các thông tin khuyến mãi sản phẩm từ LuxuryGo!">
    <meta name="keywords" content="Bài viết, Xu hướng, Thị trường thời trang, Khuyến mãi, quà tặng, Hướng dẫn sử dụng, Hướng dẫn sản phẩm">
    <meta property="og:type" content="Blog" />
    <meta property="og:title" content="Blog | LuxuryGo.VN" />
    <meta property="og:description" content="Bài viết mới, xu hướng thời trang 2016, các thông tin khuyến mãi sản phẩm từ LuxuryGo!" />
}

<div id="t3-mainbody" class="container t3-mainbody">
    <div class="row">

        <!-- MAIN CONTENT -->
        <div id="t3-content" class="t3-content col-xs-12">
            <div id="system-message-container">
            </div>

            <div class="contact" itemscope itemtype="http://schema.org/Person">
                <div class="page-header">
                    <h2>
                        <span class="contact-name" itemprop="name">Cập nhật thông tin tài khoản</span>
                    </h2>
                </div>

                <div class="col-md-8">
                    @using (Html.BeginForm(new { @class = "form-horizontal" }))

                    {

                        @Html.ValidationSummary("", new { @class = "text-danger" })


                        @Html.AntiForgeryToken()


                        @Html.HiddenFor(m => m.Id)


                        @Html.HiddenFor(m => m.UserName)


                        @Html.HiddenFor(m => m.AccessFailedCount)


                        @Html.HiddenFor(m => m.Claims)


                        @Html.HiddenFor(m => m.EmailConfirmed)


                        @Html.HiddenFor(m => m.LockoutEnabled)


                        @Html.HiddenFor(m => m.LockoutEndDateUtc)


                        @Html.HiddenFor(m => m.PasswordHash)


                        @Html.HiddenFor(m => m.PhoneNumber)


                        @Html.HiddenFor(m => m.PhoneNumberConfirmed)


                        @Html.HiddenFor(m => m.SecurityStamp)


                        @Html.HiddenFor(m => m.TwoFactorEnabled)

                        <div class="form-group">

                            <label class="col-md-3 control-label">Email:</label>

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly="readonly", required = "required" })

                        </div>

                        <div class="form-group">

                            <label class="col-md-3 control-label">Họ tên:</label>

                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", required = "required" })

                        </div>

                        <div class="form-group">

                            <label class="col-md-3 control-label">Địa chỉ:</label>

                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", required = "required" })

                        </div>

                        @*<div class="form-group">

                <label>Giới tính:</label>

                Nam @Html.CheckBox("Gender", Model.Gender == true ? true : false)

            </div>*@

                        <div class="form-group center">

                            <button type="submit" class="btn btn-primary">Lưu</button>

                        </div>

                    }

                </div>
               




            </div>

        </div>
        <!-- //MAIN CONTENT -->

    </div>
</div>



